{
  "name": "babylon-game-engine",
  "version": "1.0.0",
  "description": "A comprehensive 3D browser-based game development platform built with Babylon.js, featuring a main menu, 3D game environment, and an administrative playground editor",
  "type": "module",
  "main": "src/main.ts",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts --fix",
    "format": "prettier --write \"src/**/*.{ts,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,css,md}\"",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "clean": "rmdir /s /q dist && rmdir /s /q node_modules\\.vite",
    "clean:all": "rmdir /s /q dist && rmdir /s /q node_modules && rmdir /s /q babylon-server\\venv",
    "backend:start": "cd babylon-server && .\\venv\\Scripts\\activate && python src/main.py",
    "backend:install": "cd babylon-server && python -m venv venv && .\\venv\\Scripts\\activate && pip install -r requirements.txt"
  },
  "dependencies": {
    "@babylonjs/core": "^8.19.1",
    "@babylonjs/gui": "^8.19.1",
    "@babylonjs/havok": "^1.3.10",
    "@babylonjs/inspector": "^8.19.1",
    "@babylonjs/loaders": "^8.19.1",
    "@babylonjs/materials": "^8.19.1",
    "@babylonjs/post-processes": "^8.19.1",
    "@babylonjs/procedural-textures": "^8.19.1",
    "@babylonjs/serializers": "^8.19.1",
    "monaco-editor": "^0.45.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jsdom": "^23.0.1",
    "prettier": "^3.1.1",
    "typescript": "^5.2.2",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  }
}
